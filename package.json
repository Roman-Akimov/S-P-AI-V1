
{
  "name": "smart-planner",
  "version": "0.1.0",
  "private": true,
  "description": "Smart Planner Application",
  "author": "Your Name or Company",
  "main": "public/electron.js",
  "homepage": "./",

  "dependencies": {
    "@fullcalendar/daygrid": "^6.1.17",
    "@fullcalendar/interaction": "^6.1.17",
    "@fullcalendar/list": "^6.1.15",
    "@fullcalendar/react": "^6.1.17",
    "@fullcalendar/timegrid": "^6.1.17",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^13.5.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "fs-extra": "^11.3.0",
    "mssql": "^11.0.1",
    "mysql2": "^3.14.1",
    "react": "^19.0.0",
    "react-calendar": "^5.1.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.4.0",
    "react-scripts": "5.0.1",
    "tui-calendar": "^1.15.3",
    "tui-code-snippet": "^2.3.3",
    "tui-date-picker": "^4.3.3",
    "tui-time-picker": "^2.1.6",
    "web-vitals": "^2.1.4",
    "electron-is-dev": "^2.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:start": "npm run build && electron public/electron.js",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron public/electron.js\"",
    "electron:build": "npm run build && electron-builder",
    "electron:rebuild": "electron-rebuild -f -w mysql2"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^35.1.0",
    "electron-builder": "^26.0.12",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "wait-on": "^6.0.0",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.extremcore.smartplanner",
    "productName": "Aimly",
    "copyright": "Copyright Â© 2025 extremecore",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "./public/logotype.png",
        "to": "logotype.png"
      }

    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "public/logotype.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icons"
    }
  }
}